@{
    ViewData["Title"] = "Expediente Clínico";
}

<div class="container mt-4">
      
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-verde fw-bold">
                <i class="bi bi-file-earmark-medical-fill me-2"></i>
                Expediente Clínico
            </h2>
            <p class="text-muted">Visualización completa del historial del paciente</p>
        </div>

        <div class="d-flex gap-2">
            <input type="text"
                   class="form-control shadow-sm"
                   id="txtBuscarPaciente"
                   placeholder="Buscar por Identificación del paciente"
                   style="width: 400px;">

            <button class="btn btn-success shadow-sm" id="btnBuscarPaciente">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </div>


    <!-- ============================= -->
    <!-- CARD DATOS GENERALES -->
    <!-- ============================= -->
    <div class="card shadow-sm border-0 mb-4 border-start border-success border-5 d-none" id="cardPaciente">
        <div class="card-header bg-white py-3">
            <h5 class="fw-bold text-dark m-0">
                <i class="bi bi-person-circle me-2 text-success"></i>
                Información del Paciente
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 mb-2">
                    <strong>Nombre:</strong>
                    <div id="lblNombre"></div>
                </div>
                <div class="col-md-4 mb-2">
                    <strong>Edad:</strong>
                    <div id="lblEdad"></div>
                </div>
                <div class="col-md-4 mb-2">
                    <strong>Género:</strong>
                    <div id="lblGenero"></div>
                </div>
                <div class="col-md-4 mb-2">
                    <strong>Teléfono:</strong>
                    <div id="lblTelefono"></div>
                </div>
                <div class="col-md-4 mb-2">
                    <strong>Correo:</strong>
                    <div id="lblCorreo"></div>
                </div>
                <div class="col-md-4 mb-2">
                    <strong>Dirección:</strong>
                    <div id="lblDireccion"></div>
                </div>
            </div>
        </div>
    </div>


    <!-- ============================= -->
    <!-- TABS DEL EXPEDIENTE -->
    <!-- ============================= -->
    <div class="card shadow-sm border-0 d-none" id="cardExpediente">
        <div class="card-body">

            <ul class="nav nav-tabs mb-3">
                <li class="nav-item">
                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#consultas">
                        <i class="bi bi-clipboard2-pulse me-1"></i> Consultas
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#citas">
                        <i class="bi bi-calendar-event me-1"></i> Citas
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#recetas">
                        <i class="bi bi-capsule me-1"></i> Recetas
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#historial">
                        <i class="bi bi-journal-medical me-1"></i> Historial
                    </button>
                </li>
            </ul>

            <div class="tab-content">

                <div class="tab-pane fade show active" id="consultas">
                    <div id="contenedorConsultas"></div>
                </div>

                <!-- CITAS -->
                <div class="tab-pane fade" id="citas">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Fecha</th>
                                <th>Motivo</th>
                                <th>Estado</th>
                                <th>Médico</th>
                            </tr>
                        </thead>
                        <tbody id="tblCitas"></tbody>
                    </table>
                </div>

                <!-- RECETAS -->
                <div class="tab-pane fade" id="recetas">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Medicamento</th>
                                <th>Dosis</th>
                                <th>Frecuencia</th>
                                <th>Fecha</th>
                            </tr>
                        </thead>
                        <tbody id="tblRecetas"></tbody>
                    </table>
                </div>

                <!-- HISTORIAL -->
                <div class="tab-pane fade" id="historial">
                    <table class="table table-bordered">
                        <thead class="table-success">
                            <tr>
                                <th>Alergias</th>
                                <th>Enfermedades</th>
                                <th>Cirugías</th>
                                <th>Observaciones</th>
                            </tr>
                        </thead>
                        <tbody id="tblHistorial"></tbody>
                    </table>
                </div>

            </div>

            <!-- BOTÓN REPORTE -->
            <a asp-action="ExportarPdf"
               asp-route-identificacion="001-190898-1056B"
               class="btn btn-danger shadow">
                <i class="bi bi-file-earmark-pdf me-1"></i> Generar Reporte PDF
            </a>

        </div>
    </div>

</div>

@section Scripts {
    <script src="~/js/Expediente/expediente.js"></script>
}