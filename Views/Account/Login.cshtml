@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bienvenido - Consultorio Verde</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        :root {
            --verde-principal: #208b3a;
            --verde-claro: #f0f7f2;
            --verde-hover: #1a7431;
        }

        body {
            background: radial-gradient(circle at top right, #f0f7f2, #d1e7d5);
            font-family: 'Segoe UI', Roboto, sans-serif;
            height: 100vh;
            margin: 0;
        }

        /* Fix para evitar doble ojo en navegadores */
        input::-ms-reveal, input::-ms-clear {
            display: none;
        }

        .login-card {
            border-radius: 20px;
            border: none;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            background: rgba(255, 255, 255, 0.95);
        }

        .card-header-custom {
            background-color: var(--verde-principal);
            border-radius: 20px 20px 0 0 !important;
            padding: 2rem 1rem;
            color: white;
        }

        /* Logo sin redondeado */
        .logo-login {
            width: 140px; /* Ajusta según el ancho de tu logo */
            height: auto;
            border-radius: 0 !important;
            margin-bottom: 1rem;
        }

        .input-group-text {
            background-color: #f8f9fa;
            color: var(--verde-principal);
        }

        .form-control:focus {
            border-color: var(--verde-principal);
            box-shadow: none;
        }

        .btn-verde {
            background-color: var(--verde-principal);
            color: white;
            border-radius: 10px;
            padding: 12px;
            font-weight: 600;
            border: none;
            transition: all 0.3s ease;
        }

            .btn-verde:hover {
                background-color: var(--verde-hover);
                transform: translateY(-2px);
                color: white;
            }

        .toggle-password {
            cursor: pointer;
        }

        .copyright-text {
            font-size: 0.75rem;
            color: #6c757d;
            margin-top: 1.5rem;
            display: block;
        }
    </style>
</head>
<body class="d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">
                <div class="card login-card shadow">
                    <div class="card-header-custom text-center">
                        <img src="/images/logo.png" class="logo-login" alt="Logo Médico Verde"
                             onerror="this.src='https://cdn-icons-png.flaticon.com/512/2966/2966327.png'" />
                        <h4 class="mb-1 fw-bold">¡Hola de nuevo!</h4>
                        <p class="small mb-0 opacity-75">Panel de Gestión Médica</p>
                    </div>

                    <div class="card-body p-4 text-center">
                        <form asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small border-0 text-start"></div>

                            <div class="mb-3 text-start">
                                <label class="form-label small fw-bold text-muted text-uppercase">Usuario</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    <input asp-for="Usuario" class="form-control" placeholder="Nombre de usuario" required />
                                </div>
                            </div>

                            <div class="mb-4 text-start">
                                <label class="form-label small fw-bold text-muted text-uppercase">Contraseña</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                    <input asp-for="Contrasena" type="password" id="password" class="form-control" placeholder="Contraseña" required />
                                    <span class="input-group-text toggle-password" onclick="togglePass()">
                                        <i class="bi bi-eye" id="toggleIcon"></i>
                                    </span>
                                </div>
                            </div>

                            <button type="submit" class="btn btn-verde w-100 shadow-sm">
                                <i class="bi bi-box-arrow-in-right me-2"></i>ENTRAR
                            </button>

                            <span class="copyright-text">
                                <b>
                                    &copy; @DateTime.Now.Year Consultorio Médico Verde <br> </b>
                                
                            </span>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        function togglePass() {
            const passwordField = document.getElementById('password');
            const icon = document.getElementById('toggleIcon');

            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                passwordField.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }
    </script>
</body>
</html>