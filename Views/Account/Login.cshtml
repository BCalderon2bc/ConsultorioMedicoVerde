@model ConsultorioVerde.Web.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Consultorio Médico Verde</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f4f7f6; /* Gris muy claro de fondo */
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .card {
            border: none;
            border-radius: 15px;
        }

        .btn-verde {
            background-color: #208b3a; /* El verde de tu logo */
            color: white;
            transition: 0.3s;
        }

            .btn-verde:hover {
                background-color: #16652a;
                color: white;
            }

        .text-verde {
            color: #208b3a;
        }
    </style>
</head>
<body>
    <div class="col-md-4">
        <div class="card shadow-lg p-4">
            <div class="text-center mb-4">
                <img src="~/images/logo.png" alt="Logo Médico Verde" style="width: 150px;" />
                <h4 class="mt-3 text-verde fw-bold">Gestión de Pacientes</h4>
                <p class="text-muted">Inicie sesión para continuar</p>
            </div>
            <form asp-action="Login" method="post">
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Usuario" />
                    <label asp-for="Email">Usuario / Correo</label>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" />
                    <label asp-for="Password">Contraseña</label>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-verde btn-lg shadow-sm">Entrar</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>