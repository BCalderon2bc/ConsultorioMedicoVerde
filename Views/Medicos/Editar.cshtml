@model ConsultorioVerde.Web.Models.MedicoViewModel

@{
    ViewData["Title"] = "Editar Médico";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Editar Médico
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Editar" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        @* ¡MUY IMPORTANTE! El ID debe estar oculto para que no se pierda *@
                        <input type="hidden" asp-for="IdMedico" />
                        <input type="hidden" asp-for="Activo" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                                <input asp-for="Nombre" class="form-control border-verde" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Apellido" class="form-label fw-bold">Apellido</label>
                                <input asp-for="Apellido" class="form-control border-verde" />
                                <span asp-validation-for="Apellido" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Especialidad" class="form-label fw-bold">Especialidad</label>
                                <input asp-for="Especialidad" class="form-control border-verde" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="NumeroRegistroMINSA" class="form-label fw-bold">Registro MINSA</label>
                                <input asp-for="NumeroRegistroMINSA" class="form-control border-verde" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefono" class="form-label fw-bold">Teléfono</label>
                                <input asp-for="Telefono" class="form-control border-verde" />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Correo" class="form-label fw-bold">Correo Electrónico</label>
                                <input asp-for="Correo" class="form-control border-verde" />
                                <span asp-validation-for="Correo" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="border-top mt-4 pt-3 d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left me-1"></i>Regresar
                            </a>
                            <button type="submit" class="btn btn-verde px-5 shadow-sm">
                                <i class="bi bi-save me-1"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}