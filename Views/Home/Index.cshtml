@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-md-4">
        <div class="card shadow-sm border-0 mb-4 border-start border-success border-4">
            <div class="card-body d-flex align-items-center">
                <div class="bg-success bg-opacity-10 p-3 rounded-circle me-3">
                    <i class="bi bi-people text-success fs-3"></i>
                </div>
                <div>0
                    <h6 class="text-muted mb-0">Total Pacientes</h6>
                    <h3 class="fw-bold mb-0">124</h3>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow-sm border-0 mb-4 border-start border-primary border-4">
            <div class="card-body d-flex align-items-center">
                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                    <i class="bi bi-calendar-check text-primary fs-3"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-0">Citas para Hoy</h6>
                    <h3 class="fw-bold mb-0">8</h3>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-white">
        <h6 class="m-0 fw-bold">Próximas Terapias de Rehabilitación</h6>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Paciente</th>
                    <th>Hora</th>
                    <th>Motivo</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Juan Pérez</td>
                    <td>09:00 AM</td>
                    <td>Fisioterapia Lumbar</td>
                    <td><span class="badge bg-warning">Pendiente</span></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>