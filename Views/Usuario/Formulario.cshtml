@model UsuarioViewModel

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi @(Model.IdUsuario == 0 ? "bi-person-plus" : "bi-pencil-square") me-2"></i>
                        @(Model.IdUsuario == 0 ? "Crear Nuevo Usuario" : "Modificar Usuario: " + Model.NombreUsuario)
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action=@(Model.IdUsuario == 0 ? "Guardar" :"GuardarEdicion") method="post" id="formUsuario">
                        @Html.AntiForgeryToken()

                        @* 1. CAMPOS OCULTOS DE IDENTIDAD Y AUDITORÍA *@
                        <input type="hidden" asp-for="IdUsuario" />
                        <input type="hidden" asp-for="UsuarioCreacion" />
                        <input type="hidden" asp-for="FechaCreacion" />
                        <input type="hidden" asp-for="Activo" />

                        @* 2. EL TRUCO: CAMPOS OCULTOS PARA PERSISTENCIA DEL INDEX *@
                        <input type="hidden" name="buscarActual" value="@ViewContext.HttpContext.Request.Query["buscar"]" />
                        <input type="hidden" name="filtroActual" value="@ViewContext.HttpContext.Request.Query["filtro"]" />
                        <input type="hidden" name="mostrarActivos" value="@ViewContext.HttpContext.Request.Query["mostrarActivos"]" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Nombre de Usuario</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-person-badge"></i></span>
                                    <input asp-for="NombreUsuario" class="form-control" placeholder="Ej: jlopez" required />
                                </div>
                                <span asp-validation-for="NombreUsuario" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Rol del Sistema</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-shield-check"></i></span>
                                    <select asp-for="Rol" id="ddlRol" class="form-select" required>
                                        @* <option value="">-- Seleccione un Rol --</option> *@
                                        <option value="Admin">Administrador</option>
                                        <option value="Medico">Médico</option>
                                        <option value="Recepcionista">Recepcionista</option>
                                    </select>
                                </div>
                                <span asp-validation-for="Rol" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label class="form-label fw-bold text-success">
                                    <i class="bi bi-hospital me-1"></i> Vincular con Médico Profesional
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text border-success bg-light text-success">
                                        <i class="bi bi-person-vcard"></i>
                                    </span>
                                    <select asp-for="IdMedico" id="ddlMedico" class="form-select border-success"
                                            asp-items="@(ViewBag.Medicos as List<SelectListItem>)">
                                        @* <option value="0">-- No vinculado a un médico --</option> *@
                                    </select>
                                </div>
                                <span asp-validation-for="IdMedico" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Contraseña</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="bi bi-shield-lock"></i></span>
                                    <input asp-for="Password" type="password" class="form-control"
                                           value="@(Model.Password)"
                                           placeholder="@( "Requerido")"   />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="border-top mt-4 pt-3 text-end">
                            @* El botón cancelar también debe devolver los parámetros *@
                            <a asp-action="Index"
                               asp-route-buscar="@ViewContext.HttpContext.Request.Query["buscar"]"
                               asp-route-filtro="@ViewContext.HttpContext.Request.Query["filtro"]"
                               asp-route-mostrarActivos="@ViewContext.HttpContext.Request.Query["mostrarActivos"]"
                               class="btn btn-outline-secondary px-4 me-2">
                                <i class="bi bi-x-circle me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success px-5 shadow">
                                <i class="bi bi-save me-1"></i> @(Model.IdUsuario == 0 ? "Guardar Usuario" : "Actualizar Usuario")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>