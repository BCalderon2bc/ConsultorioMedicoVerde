@model ConsultorioVerde.Web.Models.PacienteViewModel

@{
    ViewData["Title"] = "Editar Paciente";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg border-0">
                @* Encabezado *@
                <div class="card-header text-white text-center py-3" style="background-color: #208b3a;">
                    <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Editar Información del Paciente</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Editar" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        @* Campos ocultos para mantener la integridad de los datos *@
                        <input type="hidden" asp-for="IdPaciente" />
                        <input type="hidden" asp-for="UsuarioCreacion" />
                        <input type="hidden" asp-for="FechaCreacion" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label fw-bold text-success"></label>
                                <input asp-for="Nombre" class="form-control border-success" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Apellido" class="form-label fw-bold text-success"></label>
                                <input asp-for="Apellido" class="form-control border-success" />
                                <span asp-validation-for="Apellido" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Identificacion" class="form-label fw-bold text-success">Identificación</label>
                                <input asp-for="Identificacion" class="form-control border-success" />
                                <span asp-validation-for="Identificacion" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Genero" class="form-label fw-bold text-success"></label>
                                <select asp-for="Genero" class="form-select border-success">
                                    <option value="M">Masculino</option>
                                    <option value="F">Femenino</option>
                                    <option value="O">Otro</option>
                                </select>
                                <span asp-validation-for="Genero" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="FechaNacimiento" class="form-label fw-bold text-success"></label>
                                <input asp-for="FechaNacimiento" class="form-control border-success" type="date" />
                                <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefono" class="form-label fw-bold text-success"></label>
                                <input asp-for="Telefono" class="form-control border-success" />
                                <span asp-validation-for="Telefono" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Correo" class="form-label fw-bold text-success"></label>
                                <input asp-for="Correo" class="form-control border-success" />
                                <span asp-validation-for="Correo" class="text-danger small"></span>
                            </div>

                            <label asp-for="Direccion" class="form-control-label fw-bold text-success">Dirección</label>
                            <textarea name="Direccion" id="Direccion" class="form-control border-success" rows="2">@Model.Direccion</textarea>
                            <span asp-validation-for="Direccion" class="text-danger small"></span>

                          
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn text-white px-5" style="background-color: #208b3a;">
                                <i class="bi bi-save me-1"></i> Actualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}