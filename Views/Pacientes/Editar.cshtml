@model ConsultorioVerde.Web.Models.PacienteViewModel

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-white py-3">
            <h3 class="text-verde fw-bold mb-0"><i class="bi bi-pencil-square me-2"></i>Editar Ficha de Paciente</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="Editar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                @* CAMPOS OCULTOS - CRUCIALES PARA EL PUT *@
                <input type="hidden" asp-for="IdPaciente" />
                <input type="hidden" asp-for="FechaCreacion" />
                <input type="hidden" asp-for="UsuarioCreacion" />
                <input type="hidden" asp-for="Activo" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold text-success">Nombre</label>
                        <input asp-for="Nombre" class="form-control border-verde" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold text-success">Apellido</label>
                        <input asp-for="Apellido" class="form-control border-verde" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-bold text-success">Identificación</label>
                        <input asp-for="Identificacion" class="form-control border-verde" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-bold text-success">Fecha de Nacimiento</label>
                        <input asp-for="FechaNacimiento" type="date" class="form-control border-verde" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-bold text-success">Género</label>
                        <select asp-for="Genero" class="form-select border-verde">
                            <option value="M">Masculino</option>
                            <option value="F">Femenino</option>
                            <option value="O">Otro</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold text-success">Teléfono</label>
                        <input asp-for="Telefono" class="form-control border-verde" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold text-success">Correo</label>
                        <input asp-for="Correo" class="form-control border-verde" />
                    </div>
                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-bold text-success">Dirección</label>
                        <textarea asp-for="Direccion" class="form-control border-verde" rows="2"></textarea>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancelar</a>
                    <button type="submit" class="btn btn-verde px-5 shadow-sm">Actualizar Datos</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}