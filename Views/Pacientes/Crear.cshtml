@model ConsultorioVerde.Web.Models.PacienteViewModel

@{
    ViewData["Title"] = "Nuevo Paciente";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header text-white text-center py-3" style="background-color: #208b3a;">
                    <h4 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>Registrar Nuevo Paciente</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Crear">
                        @* Importante para mostrar errores de la API si el guardado falla *@
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="row">
                            @* Nombres *@
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label fw-bold text-success">Nombre</label>
                                <input asp-for="Nombre" class="form-control border-success" placeholder="Ej. Juan" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            @* Apellidos *@
                            <div class="col-md-6 mb-3">
                                <label asp-for="Apellido" class="form-label fw-bold text-success">Apellido</label>
                                <input asp-for="Apellido" class="form-control border-success" placeholder="Ej. Pérez" />
                                <span asp-validation-for="Apellido" class="text-danger small"></span>
                            </div>

                            @* Identificación (Sincronizado con Identificacion en SQL) *@
                            <div class="col-md-4 mb-3">
                                <label asp-for="Identificacion" class="form-label fw-bold text-success">Identificación / DUI</label>
                                <input asp-for="Identificacion" class="form-control border-success" placeholder="00000000-0" />
                                <span asp-validation-for="Identificacion" class="text-danger small"></span>
                            </div>

                            @* Género *@
                            <div class="col-md-4 mb-3">
                                <label asp-for="Genero" class="form-label fw-bold text-success">Género</label>
                                <select asp-for="Genero" class="form-select border-success">
                                    <option value="">Seleccione...</option>
                                    <option value="M">Masculino</option>
                                    <option value="F">Femenino</option>
                                    <option value="O">Otro</option>
                                </select>
                                <span asp-validation-for="Genero" class="text-danger small"></span>
                            </div>

                            @* Fecha de Nacimiento *@
                            <div class="col-md-4 mb-3">
                                <label asp-for="FechaNacimiento" class="form-label fw-bold text-success">F. Nacimiento</label>
                                <input asp-for="FechaNacimiento" class="form-control border-success" type="date" />
                                <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
                            </div>

                            @* Teléfono *@
                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefono" class="form-label fw-bold text-success">Teléfono</label>
                                <input asp-for="Telefono" class="form-control border-success" placeholder="7777-7777" />
                                <span asp-validation-for="Telefono" class="text-danger small"></span>
                            </div>

                            @* Correo *@
                            <div class="col-md-6 mb-3">
                                <label asp-for="Correo" class="form-label fw-bold text-success">Correo Electrónico</label>
                                <input asp-for="Correo" class="form-control border-success" placeholder="ejemplo@correo.com" />
                                <span asp-validation-for="Correo" class="text-danger small"></span>
                            </div>

                            @* Dirección *@
                            <div class="col-md-12 mb-3">
                                <label asp-for="Direccion" class="form-label fw-bold text-success">Dirección Particular</label>
                                <textarea asp-for="Direccion" class="form-control border-success" rows="2" placeholder="Barrio, calle, número de casa..."></textarea>
                                <span asp-validation-for="Direccion" class="text-danger small"></span>
                            </div>
                        </div>

                        @* Campos ocultos para enviar valores por defecto *@
                        <input type="hidden" asp-for="Activo" value="true" />

                        <hr class="my-4">

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Volver al Listado
                            </a>
                            <button type="submit" class="btn text-white px-5" style="background-color: #208b3a;">
                                <i class="bi bi-check-circle me-1"></i> Guardar Paciente
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}