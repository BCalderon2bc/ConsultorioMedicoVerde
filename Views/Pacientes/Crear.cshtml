@model ConsultorioVerde.Web.Models.PacienteViewModel

@{
    ViewData["Title"] = "Nuevo Paciente";
}
    
<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-success text-white py-3">
            <h5 class="mb-0">
                <i class="bi bi-person-plus-fill me-2"></i>Registrar Paciente
            </h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="Crear" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Nombre</label>
                        <input asp-for="Nombre" class="form-control border-verde solo-letras" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Apellido</label>
                        <input asp-for="Apellido" class="form-control border-verde solo-letras" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-bold">Identificación (Cédula)</label>
                        <input asp-for="Identificacion" class="form-control border-verde cedula-ni" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-bold">Fecha de Nacimiento</label>
                        <input asp-for="FechaNacimiento" type="date" class="form-control border-verde" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label fw-bold">Género</label>
                        <select asp-for="Genero" class="form-select border-verde">
                            @* <option value="">Seleccione...</option> *@
                            <option value="M">Masculino</option>
                            <option value="F">Femenino</option>
                            <option value="O">Otro</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Teléfono</label>
                        <input asp-for="Telefono" class="form-control border-verde telefono-mask" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Correo Electrónico</label>
                        <input asp-for="Correo" class="form-control border-verde correo-valido" />
                        <span asp-validation-for="Correo" class="text-danger small"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label class="form-label fw-bold">Dirección</label>
                        <textarea asp-for="Direccion" class="form-control border-verde" rows="2"></textarea>
                    </div>
                </div>

                @* --- Debajo de la dirección, agregamos el Historial --- *@
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card border-info bg-light shadow-sm">
                            <div class="card-header bg-info text-white">
                                <h6 class="mb-0"><i class="bi bi-clipboard2-pulse-fill me-2"></i>Historial Médico Inicial</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label class="form-label fw-bold">Alergias Conocidas</label>
                                        <input asp-for="Alergias" class="form-control border-info" placeholder="Medicamentos, alimentos, etc." />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Enfermedades Previas</label>
                                        <textarea asp-for="EnfermedadesPrevias" class="form-control border-info" rows="3" placeholder="Diabetes, Hipertensión, etc."></textarea>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label fw-bold">Cirugías Previas</label>
                                        <textarea asp-for="CirugiasPrevias" class="form-control border-info" rows="3" placeholder="Detalle intervenciones anteriores..."></textarea>
                                    </div>
                                    <div class="col-md-12">
                                        <label class="form-label fw-bold">Observaciones Generales</label>
                                        <input asp-for="Observaciones" class="form-control border-info" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="border-top mt-4 pt-3 d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 m-2">
                        <i class="bi bi-arrow-left me-1"></i>Regresar
                    </a>
                    <button type="submit" class="btn btn-success px-5 shadow">
                        <i class="bi bi-save me-1"></i>Guardar Paciente
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}