@model IEnumerable<ConsultorioVerde.Web.Models.CitaViewModel>

@{
    ViewData["Title"] = "Agenda de Citas";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="text-verde fw-bold"><i class="bi bi-calendar-check-fill me-2"></i>Agenda Médica</h2>
        <p class="text-muted small">Control de terapias y consultas diarias</p>
    </div>
    <a asp-action="Programar" class="btn btn-success shadow-sm">
        <i class="bi bi-calendar-plus me-1"></i> Programar Cita
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm mb-4 bg-verde text-white">
            <div class="card-body">
                <h6>Citas de Hoy</h6>
                <h2 class="fw-bold">@Model.Count()</h2>
                <hr />
                <p class="small mb-0"><i class="bi bi-clock me-1"></i> Próxima: 09:00 AM</p>
            </div>
        </div>
    </div>

    <div class="col-md-9">
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Hora</th>
                            <th>Paciente</th>
                            <th>Motivo de Consulta</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 text-primary fw-bold">
                                    @item.HoraCita.ToString(@"hh\:mm")
                                </td>
                                <td>@item.NombrePaciente</td>
                                <td>@item.Motivo</td>
                                <td>
                                    @if (item.Estado == "Pendiente")
                                    {
                                        <span class="badge bg-warning text-dark">Pendiente</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">Confirmada</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-outline-success"><i class="bi bi-check-lg"></i></button>
                                        <button class="btn btn-sm btn-outline-danger"><i class="bi bi-x-lg"></i></button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>