@model ConsultorioVerde.Web.Models.CitaViewModel
@{
    ViewData["Title"] = "Editar Cita Médica";
}

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                @* Encabezado Verde Success *@
                <div class="card-header bg-success text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Editar Cita Médica #@Model.IdCita
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Editar" method="post" id="formEditarCita">
                        @Html.AntiForgeryToken()

                        @* Campos Ocultos de Identidad y Auditoría *@
                        <input type="hidden" asp-for="IdCita" />
                        <input type="hidden" asp-for="UsuarioCreacion" />
                        <input type="hidden" asp-for="FechaCreacion" />

                        @* Campo para el API *@
                        <input type="hidden" asp-for="FechaCita" id="FechaCitaFull" />

                        <div class="row g-3">
                            @* Selección de Paciente *@
                            <div class="col-md-12">
                                <label class="form-label fw-bold text-muted small">PACIENTE</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-verde-subtle">
                                        <i class="bi bi-person-fill text-success"></i>
                                    </span>
                                    @* Se usa NombreConCedula como acordamos antes *@
                                    <select asp-for="IdPaciente" class="form-select border-start-0 border-verde-subtle bg-light" disabled
                                            asp-items="@(new SelectList((System.Collections.IEnumerable)ViewBag.Pacientes, "IdPaciente", "NombreConCedula"))">
                                    </select>
                                    <input type="hidden" asp-for="IdPaciente" />
                                </div>
                                <span asp-validation-for="IdPaciente" class="text-danger small"></span>
                            </div>

                            @* Selección de Médico *@
                            <div class="col-md-12">
                                <label class="form-label fw-bold text-muted small">MÉDICO</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-verde-subtle">
                                        <i class="bi bi-person-badge-fill text-success"></i>
                                    </span>
                                    <select asp-for="IdMedico" class="form-select border-start-0 border-verde-subtle bg-light" disabled
                                            asp-items="@(new SelectList((System.Collections.IEnumerable)ViewBag.Medicos, "IdMedico", "NombreConEspecialidad"))">
                                    </select>
                                    <input type="hidden" asp-for="IdMedico" />
                                </div>
                                <span asp-validation-for="IdMedico" class="text-danger small"></span>
                            </div>




                            <div class="col-md-6">
                                <label class="form-label fw-bold">Fecha de Cita</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-verde-subtle">
                                        <i class="bi bi-calendar-date text-success"></i>
                                    </span>
                                    <input type="date" id="fechaSolo" class="form-control border-start-0 border-verde-subtle"
                                           value="@Model.FechaCita?.ToString("yyyy-MM-dd")" required />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-bold">Hora</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-verde-subtle">
                                        <i class="bi bi-clock text-success"></i>
                                    </span>
                                    <input type="time" id="horaSolo" class="form-control border-start-0 border-verde-subtle"
                                           value="@Model.FechaCita?.ToString("HH:mm")" required />
                                </div>
                            </div>

                            <div class="col-md-12">
                                <label class="form-label fw-bold">Estado de la Cita</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white border-verde-subtle">
                                        <i class="bi bi-info-circle text-success"></i>
                                    </span>
                                    <select asp-for="Estado" class="form-select border-start-0 border-verde-subtle">
                                        <option value="Pendiente">Pendiente</option>
                                        <option value="Completada">Completada</option>
                                        <option value="Cancelada">Cancelada</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <label class="form-label fw-bold">Motivo</label>
                                <textarea asp-for="Motivo" class="form-control border-verde-subtle" rows="3" placeholder="Detalle el motivo de la cita o actualización..."></textarea>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between border-top mt-4 pt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left me-1"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success px-5 shadow">
                                <i class="bi bi-check-circle me-1"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
	<script>
		document.getElementById('formEditarCita').addEventListener('submit', function (e) {
			const fechaVal = document.getElementById('fechaSolo').value;
			const horaVal = document.getElementById('horaSolo').value;

			if (fechaVal && horaVal) {
				const fechaCompleta = fechaVal + 'T' + horaVal + ':00';
				document.getElementById('FechaCitaFull').value = fechaCompleta;
			}
		});
	</script>
}