<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Médico Verde</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --verde-clinica: #208b3a;
            --verde-oscuro: #16652a;
        }

        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            min-height: 100vh;
            background-color: var(--verde-clinica);
            color: white;
        }

            .sidebar .nav-link {
                color: white;
                border-radius: 5px;
                margin: 5px 10px;
            }

                .sidebar .nav-link:hover {
                    background-color: var(--verde-oscuro);
                }

                .sidebar .nav-link.active {
                    background-color: white;
                    color: var(--verde-clinica);
                    font-weight: bold;
                }

        .navbar-top {
            background-color: white;
            border-bottom: 1px solid #dee2e6;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block sidebar p-0 shadow">
                <div class="text-center p-4">
                    <img src="~/images/logo.png" style="width: 80%;" />
                    <hr class="text-white" />
                </div>
                <div class="nav flex-column">
                    <a class="nav-link active" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door me-2"></i> Inicio
                    </a>
                    <a class="nav-link" asp-controller="Pacientes" asp-action="Index">
                        <i class="bi bi-people me-2"></i> Pacientes
                    </a>
                    <a class="nav-link" asp-controller="Citas" asp-action="Index">
                        <i class="bi bi-calendar-event me-2"></i> Citas Médicas
                    </a>
                    <a class="nav-link" asp-controller="Expedientes" asp-action="Index">
                        <i class="bi bi-file-earmark-medical me-2"></i> Expedientes
                    </a>
                    <a class="nav-link" asp-controller="Medicos" asp-action="Index">
                        <i class="bi bi-person-badge-fill me-2" |></i>
                        <span>Médicos</span>
                    </a>
                    </>
                    <hr />
                    <a class="nav-link text-warning" asp-controller="Account" asp-action="Login">
                        <i class="bi bi-box-arrow-right me-2"></i> Salir
                    </a>
                </div>
            </nav>

            <main class="col-md-10 ms-sm-auto p-0">
                <header class="navbar-top p-3 d-flex justify-content-between align-items-center">
                    <h5 class="m-0 text-secondary">Panel de Control - Consultorio Médico Verde</h5>
                    <span class="badge bg-success p-2">Bienvenido, Dr. Verde</span>
                </header>
                <div class="p-4">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>