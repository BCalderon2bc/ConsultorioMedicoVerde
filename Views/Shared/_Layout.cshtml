<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Médico Verde</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
</head>
<body>
    @{
        var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    }

    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 d-none d-md-block sidebar p-0 shadow">
                <div class="logo-container">
                    <img src="~/images/logo.png" style="width: 80%;" onerror="this.src='https://cdn-icons-png.flaticon.com/512/2966/2966327.png'" />
                    <hr class="text-white" />
                </div>

                <div class="nav flex-column">
                    <a class="nav-link @(currentController == "Home" ? "active" : "")"
                       asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door me-2"></i> Inicio
                    </a>

                    @if (User.IsInRole("Recepcionista") || User.IsInRole("Admin"))
                    {
                        <div class="section-title text-white">Admisión</div>
                        <a class="nav-link @(currentController == "Pacientes" ? "active" : "")"
                           asp-controller="Pacientes" asp-action="Index">
                            <i class="bi bi-people me-2"></i> Pacientes
                        </a>

                        <a class="nav-link @(currentController == "Citas" ? "active" : "")"
                           asp-controller="Citas" asp-action="Index">
                            <i class="bi bi-calendar-event me-2"></i> Citas Médicas
                        </a>
                    }

                    @if (User.IsInRole("Medico") || User.IsInRole("Admin"))
                    {
                        <div class="section-title text-white">Clínica</div>
                        <a class="nav-link @(currentController == "Expedientes" ? "active" : "")"
                           asp-controller="Expedientes" asp-action="Index">
                            <i class="bi bi-file-earmark-medical me-2"></i> Expedientes
                        </a>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <div class="section-title text-white">Configuración</div>
                        <a class="nav-link @(currentController == "Medicos" ? "active" : "")"
                           asp-controller="Medicos" asp-action="Index">
                            <i class="bi bi-person-badge-fill me-2"></i> Médicos
                        </a>

                        <a class="nav-link @(currentController == "Usuario" ? "active" : "")"
                           asp-controller="Usuario" asp-action="Index">
                            <i class="bi bi-shield-lock me-2"></i> Usuarios
                        </a>
                    }

                    <hr class="text-white-50 mx-3 mt-4" />

                    <a class="nav-link text-warning" asp-controller="Account" asp-action="Logout">
                        <i class="bi bi-box-arrow-right me-2"></i> Salir
                    </a>
                </div>
            </nav>

            <main class="col-md-10 ms-sm-auto p-0">
                <header class="navbar-top p-3 d-flex justify-content-between align-items-center">
                    <h5 class="m-0 text-secondary">Panel de Control - Consultorio Médico Verde</h5>
                    <div class="d-flex align-items-center">
                        <div class="text-end me-3 d-none d-sm-block">
                            <small class="text-muted d-block" style="font-size: 0.7rem;">Sesión iniciada como:</small>
                            <small class="fw-bold text-dark">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</small>
                        </div>
                        <span class="badge bg-success p-2">
                            <i class="bi bi-person-check me-1"></i> @User.Identity.Name
                        </span>
                    </div>
                </header>
                <div class="p-4">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>